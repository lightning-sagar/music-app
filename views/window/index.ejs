<% layout('/layout/boilerplate.ejs') %>
<style>
    body {
        background-color: rgb(0, 0, 0);
        margin: 0;
    }

    .bg {
        background: rgb(0, 0, 0);
    }

    .main {
        width: 97%;
        padding: 20px;
        background: #0a0909; /* Darker background color */
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        justify-content: flex-start;
    }

    .card {
        padding: 20px;
        background-color: #1b1a1a; /* Darker background color for cards */
        position: relative;
        border: none;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        width: calc(33.3333% - 20px);
        box-sizing: border-box;
        transition: transform 0.2s; /* Add a smooth transition effect */
        border-radius: 8px; /* Added border-radius for rounded corners */
    }

    .card:hover {
        transform: scale(1.05); /* Add a slight scale effect on hover */
    }

    .card img {
        width: 100%;
        height: 200px; /* Set a fixed height for the images */
        object-fit: cover; /* Maintain aspect ratio for images */
        border-radius: 8px; /* Added border-radius for rounded corners */
    }

    .card-body {
        padding: 20px;
    }

    .card-text {
        color: #fff;
        font-size: 18px;
        margin-bottom: 10px;
    }

    .card-title {
        color: #fff;
        font-size: 24px;
        margin-bottom: 15px;
    }

    .container {
        margin-right: 5px;
        padding: 109px 0 120px 0;
    }
</style>

<div class="bg">
    <div class="main">
        <% if (allListings && allListings.length > 0) { %>
            <% for (let listing of allListings) { %>
                <a href="/listings/<%= listing._id %>" style="text-decoration: none;">
                    <div class="card" style="width: 18rem;">
                        <img src="<%= listing.image.url %>" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title"><%= listing.title %></h5>
                            <p class="card-text"><%= listing.description %></p>
                        </div>
                    </div>
                </a>
            <% } %>
        <% } else { %>
            <p>No listings available</p>
        <% } %>
    </div>
</div>
