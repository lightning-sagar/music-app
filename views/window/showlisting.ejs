<% layout('/layout/boilerplate.ejs') %>
<style>
    body {
        background-color: rgb(0, 0, 0);
        margin: 0;
    }

    .bg {
        background: rgb(0, 0, 0);
    }

    .container {
        margin-right: 5px;
        padding: 109px 0 120px 0;
        width: 97%;
    }

    .main {
        width: 97%;
        padding: 20px;
        background: #0a0909;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .audio-container {
        width: 100%;
        margin-bottom: 20px;
        overflow: hidden;
        border-radius: 8px;
    }

    .audio-container iframe {
        border: 0;
        width: 100%;
        height: 166px;
        border-radius: 8px;
    }

    .audio {
        width: 100%;
    }

    .title {
        color: #fff;
        text-align: center;
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .image {
        width: 100%;
        max-width: 600px;
        height: auto;
        border-radius: 8px;
        margin-bottom: 20px;
    }

    .description {
        font-size: 18px;
    }
</style>

<div class="bg container">
    <div class="main">
        <div class="title">
            <h2><%= listing.title %></h2>
        </div>
        <img class="image" src="<%= listing.image.url %>" alt="<%= listing.title %>" />
    </div>
</div>