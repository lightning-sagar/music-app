    <% layout('/layout/boilerplate.ejs') %>
    <style>
        body {
            background-color: #000;
            margin: 0;
            font-family: 'Arial', sans-serif;
        }

        .bg {
            background: #000;
            padding: 20px;
            margin-top: 120px;
            margin-left: 70px;
        }

        .main {
            width: 90%;
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
            background: #0a0909;
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: center;
            align-items: center;
        }

        h1 {
            color: #fff;
            font-size: 36px;
            margin-bottom: 20px;
        }

        form {
            width: 100%;
            max-width: 600px;
        }

        label {
            color: #fff;
            font-size: 18px;
            margin-bottom: 5px;
            display: block;
        }

        input {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            box-sizing: border-box;
            border: 1px solid #555;
            border-radius: 5px;
            background: #1b1a1a;
            color: #fff;
            font-size: 16px;
        }

        button {
            background: #3498db;
            color: #fff;
            padding: 12px 20px;
            border: none;
            border-radius: 5px;
            font-size: 18px;
            cursor: pointer;
            transition: background 0.3s;
        }

        button:hover {
            background: #2980b9;
        }
    </style>

    <div class="bg">
        <div class="main">
            <h1>Add Music</h1>
            <form action="/addmusics" method="POST" enctype="multipart/form-data">
                <!-- Add your form fields for music details -->
                <label for="title">Title:</label>
                <input type="text" id="title" name="title" required>

                <label for="image">Image:</label>
                <input type="file" id="image" name="image" accept="image/*" required>

                <label for="audio">Audio:</label>
                <input type="file" id="audio" name="audio" accept="audio/*" required>

                <!-- Add more fields as needed -->

                <button type="submit">Add Music</button>
            </form>
        </div>
    </div>
