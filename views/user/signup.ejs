<% layout('layout/boilerplate') %>

<style>
    body {
        background-color: rgb(0, 0, 0);
        margin: 0;
        color: #fff;
    }

    .bg {
        background: rgb(0, 0, 0);
    }

    .main {
        width: 97%;
        padding: 20px;
        background: #0a0909; /* Darker background color */
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        justify-content: flex-start;
        color: #fff;
    }

    .container {
        margin-right: 50px;
        padding: 100px 20px 20px 352px; /* Top, Right, Bottom, Left */
    }
</style>

<body>
    <div class="row mt-3">
        <div class="col-8">
            <h3 class="text-center">Sign Up</h3>
            <br>
            <form class="needs-validation" novalidate method="POST" action="/signup">
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input name="user[username]" id="username" required class="form-control" type="text" />
                </div>
            
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input name="user[email]" id="email" required class="form-control" type="text" />
                </div>
            
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input name="user[password]" id="password" required class="form-control" type="password" />
                </div>
                <button class="btn btn-success">Sign Up</button>
            </form>
        </div>
    </div>
</body>